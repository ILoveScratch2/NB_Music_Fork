{
    "name": "nb_music",
    "version": "0.1.6",
    "description": "一款在线音乐播放器",
    "main": "src/main.js",
    "scripts": {
        "build": "electron-builder build",
        "publish": "electron-builder build --publish always",
        "run": "electron .",
        "debug": "electron --inspect=5858 .",
        "debug-brk": "electron --inspect-brk=5858 ."
    },
    "keywords": [],
    "author": {
        "name": "NB-Group",
        "email": "nb-group@qq.com"
    },
    "license": "GPL-3.0-only",
    "devDependencies": {
        "@eslint/js": "^9.18.0",
        "electron": "34.0.2",
        "electron-builder": "^25.1.8",
        "eslint": "^9.18.0",
        "globals": "^15.14.0"
    },
    "dependencies": {
        "@pixi/app": "^7.4.2",
        "@pixi/core": "^7.4.2",
        "@pixi/display": "^7.4.2",
        "@pixi/filter-blur": "^7.4.2",
        "@pixi/filter-bulge-pinch": "^5.1.1",
        "@pixi/filter-color-matrix": "^7.4.2",
        "@pixi/sprite": "^7.4.2",
        "NeteaseCloudMusicApi": "^4.25.0",
        "axios": "^1.7.9",
        "bootstrap-icons": "^1.11.3",
        "electron-reload": "^2.0.0-alpha.1",
        "electron-store": "8.2.0",
        "md5": "^2.3.0",
        "puppeteer": "^24.0.0",
        "qrcode": "^1.5.4"
    },
    "build": {
        "artifactName": "${name}-v${version}-${os}-${arch}.${ext}",
        "appId": "com.nbgroup.nbmusic",
        "productName": "NB Music",
        "directories": {
            "output": "dist"
        },
        "win": {
            "icon": "./icons/icon.ico",
            "target": [
                "nsis",
                "zip"
            ]
        },
        "mac": {
            "icon": "./icons/icon.icns",
            "target": [
                "dmg",
                "zip"
            ]
        },
        "linux": {
            "icon": "./icons/icon.png",
            "target": [
                "AppImage",
                "deb",
                "pacman"
            ],
            "category": "AudioVideo"
        },
        "publish": [
            {
                "provider": "github",
                "owner": "NB-Group",
                "repo": "NB_Music"
            }
        ]
    },
    "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
